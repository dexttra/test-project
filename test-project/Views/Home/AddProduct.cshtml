@model ProductViewModel

<h2 style="text-align: center;">Добавление продукта</h2>
<form class="form" method="post" style="max-width: 300px; margin: 0 auto;">

    <div class="form-group">
        <label asp-for="Name">Название</label><br />
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Цена:</label><br />
        <input type="number" class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Описание:</label><br />
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Категория:</label><br />
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>

    <br />
    <div style="text-align: center;">
        <button asp-controller="Home"
                asp-action="AddProduct"
                type="submit" class="btn btn-primary">
            Добавить продукт
        </button>
    </div>
</form>
