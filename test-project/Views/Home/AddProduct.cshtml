@model ProductViewModel

<h2 style="text-align: center;">Добавление продукта</h2>
<form class="form" method="post" style="max-width: 400px; margin: 0 auto;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Название:</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Цена:</label>
        <input type="number" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Описание:</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryViewModel.Id">Категория:</label>
        <select asp-for="CategoryViewModel.Id" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Выберите категорию</option>
        </select>
        <span asp-validation-for="CategoryViewModel.Id" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="CategoryViewModel.Name" value="Default" />

    <br />
    <div style="text-align: center;">
        <button type="submit" class="btn btn-primary">Добавить продукт</button>
    </div>
</form>


